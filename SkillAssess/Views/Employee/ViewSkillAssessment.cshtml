@model SkillAssess.Models.SkillAssessment

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skill Assessment Form</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 50px;
            background-color: #f8f9fa; /* Light gray background */
        }

        .container {
            background-color: #ffffff; /* White background */
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #007bff; /* Blue text */
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        p {
            margin-top: 5px;
            margin-bottom: 0;
        }

        .btn-primary {
            background-color: #007bff; /* Blue button */
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Darker blue on hover */
                border-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Skill Assessment Form</h2>
        <div class="form-group">
            <label>Employee ID:</label>
            <p>@Model.EmpID</p>
        </div>

        <h2>Technical Skills</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Database:</label>
                    <p>@Model.DatabaseRating</p>
                </div>
                <div class="form-group">
                    <label>Programming:</label>
                    <p>@Model.ProgrammingRating</p>
                </div>
                <div class="form-group">
                    <label>Java:</label>
                    <p>@Model.JavaRating</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>C#:</label>
                    <p>@Model.CSRating</p>
                </div>
                <div class="form-group">
                    <label>Python:</label>
                    <p>@Model.PythonRating</p>
                </div>
                <div class="form-group">
                    <label>Web Programming:</label>
                    <p>@Model.WebProgrammingRating</p>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label>Other:</label>
            <p>@Model.OtherTechnical</p>
        </div>

        <h2>Soft Skills</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Verbal Communication:</label>
                    <p>@Model.VerbalCommunication</p>
                </div>
                <div class="form-group">
                    <label>Written Communication:</label>
                    <p>@Model.WrittenCommunication</p>
                </div>
                <div class="form-group">
                    <label>Teamwork:</label>
                    <p>@Model.Teamwork</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Problem Solving:</label>
                    <p>@Model.ProblemSolving</p>
                </div>
                <div class="form-group">
                    <label>Decision Making:</label>
                    <p>@Model.DecisionMaking</p>
                </div>
                <div class="form-group">
                    <label>Leadership:</label>
                    <p>@Model.Leadership</p>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label>Foreign Languages:</label>
            <p>@Model.AnyForeignLanguage</p>
        </div>

        <a href="@Url.Action("Index", "Employee")" class="btn btn-primary">Go Back To Home Page</a>
    </div>
</body>
</html>
