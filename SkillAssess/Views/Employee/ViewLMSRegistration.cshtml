@model SkillAssess.Models.Employee

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View LMS Registration</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 50px;
            background-color: #f8f9fa; /* Light gray background */
        }

        .container {
            background-color: #ffffff; /* White background */
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #007bff; /* Blue text */
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        p {
            margin-top: 5px;
            margin-bottom: 0;
        }

        .btn-primary {
            background-color: #007bff; /* Blue button */
            border-color: #007bff;
        }

        .btn-primary:hover  {
                background-color: #0056b3; /* Darker blue on hover */
                border-color: #0056b3;
            }

        .profile-photo {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            margin-bottom: 20px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .row {
            margin-bottom: 20px;
        }

        .col-md-6 {
            padding-right: 15px;
            padding-left: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">LMS Registration</h2>

        @if (!string.IsNullOrEmpty(Model.Photo))
        {
            <img src="@Url.Content($"~/Uploads/{Model.Photo}")" class="profile-photo" alt="Profile Photo" />
        }

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Employee ID:</label>
                    <p>@Model.EmployeeId</p>
                </div>
                <div class="form-group">
                    <label>First Name:</label>
                    <p>@Model.FirstName</p>
                </div>
                <div class="form-group">
                    <label>Last Name:</label>
                    <p>@Model.LastName</p>
                </div>
                <div class="form-group">
                    <label>Job Role:</label>
                    <p>@Model.JobRole</p>
                </div>
                <div class="form-group">
                    <label>Gender:</label>
                    <p>@Model.Gender</p>
                </div>
                <div class="form-group">
                    <label>Date of Birth:</label>
                    <p>@Model.DOB.ToString("d")</p>
                </div>
                <div class="form-group">
                    <label>Contact Number:</label>
                    <p>@Model.ContactNumber</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email ID:</label>
                    <p>@Model.Email</p>
                </div>
                <div class="form-group">
                    <label>Address:</label>
                    <p>@Model.Address</p>
                </div>
                <div class="form-group">
                    <label>Date Of Joining:</label>
                    <p>@Model.DateOfJoining.ToString("d")</p>
                </div>
                <div class="form-group">
                    <label>Total IT Experience:</label>
                    <p>@Model.TotalExperience</p>
                </div>
                <div class="form-group">
                    <label>Bachelor Degree:</label>
                    <p>@Model.BachelorDegree</p>
                </div>
                <div class="form-group">
                    <label>Bachelor Specialization:</label>
                    <p>@Model.BachelorSpecialization</p>
                </div>
                <div class="form-group">
                    <label>Masters Degree:</label>
                    <p>@Model.MastersDegree</p>
                </div>
                <div class="form-group">
                    <label>Masters Specialization:</label>
                    <p>@Model.MastersSpecialization</p>
                </div>
                <div class="form-group">
                    <label>Certifications:</label>
                    <p>@Model.Certifications</p>
                </div>
                <div class="form-group">
                    <label>Reporting Manager:</label>
                    <p>@Model.ReportingManagerEmail</p>
                </div>
            </div>
        </div>

        <a href="@Url.Action("Index", "Employee")" class="btn btn-primary">Go Back To Home Page</a>
        <a href="@Url.Action("EditLMSRegistration", "Employee", new { id = Model.EmployeeId })" class="btn btn-secondary">Edit</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
